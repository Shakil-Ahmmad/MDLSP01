            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Content area -->
                <div class="content">
                    <div class="row">
                        @RenderBody()
                    </div>
                    <!-- Footer -->
                    @*<div class="footer text-muted">
                            <div class="col-md-12">
                                <a href="#">All rights reserved by Kormo</a>
                            </div>
                        </div>*@
                    <!-- /footer -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /main content -->
        </div>
