<body>

    <!-- Main navbar -->
    <div class="navbar navbar-default header-highlight">
        <div class="navbar-header text-center">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")" style="color:white">Mass Data Education</a>

            <ul class="nav navbar-nav visible-xs-block">
                <li><a data-toggle="collapse" data-target="#navbar-mobile"><i class="icon-tree5"></i></a></li>
                <li><a class="sidebar-mobile-main-toggle"><i class="icon-paragraph-justify3"></i></a></li>
            </ul>
        </div>

        <div class="navbar-collapse collapse" id="navbar-mobile">
            <ul class="nav navbar-nav">
                <li><a class="sidebar-control sidebar-main-toggle hidden-xs"><i class="icon-paragraph-justify3"></i></a></li>
            </ul>

            <div class="navbar-right">
                <p class="navbar-text">Welcome! @person.Name</p>
            </div>
        </div>
    </div>
    <!-- /main navbar -->
    <!-- Page container -->
    <div class="page-container">
        <!-- Page content -->
        <div class="page-content">
            <!-- Main sidebar -->
            <div class="sidebar sidebar-main">
                <div class="sidebar-content">
                    <!-- User menu -->
                    <div class="sidebar-user-material">
                        <div class="category-content">
                            <div class="sidebar-user-material-content">
                                <a href="#"><img src="~/assets/images/placeholder.jpg" class="img-circle img-responsive" alt=""></a>
                                <h6>@person.Name</h6>
                                <span class="text-size-small">@person.Type</span>
                            </div>

                            <div class="sidebar-user-material-menu">
                                <a href="#user-nav" data-toggle="collapse"><span>My account</span> <i class="caret"></i></a>
                            </div>
                        </div>

                        <div class="navigation-wrapper collapse" id="user-nav">
                            <ul class="navigation">
                                <li><a href="#"><i class="icon-user-plus"></i> <span>My profile</span></a></li>
                                <li><a href="@Url.Action("LogOut", "Access")"><i class="icon-switch2"></i> <span>Logout</span></a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- /user menu -->
                    <!-- Main navigation -->
                    <div class="sidebar-category sidebar-category-visible">
                        <div class="category-content no-padding">
                            <ul class="navigation navigation-main navigation-accordion">

                                <!-- Main -->
                                <li class="navigation-header"><span>Main</span> <i class="icon-menu" title="Main pages"></i></li>
                                <li class="@Html.IsActive(actions: "Index", controllers: "Home")"><a href="@Url.Action("Index", "Home")"><i class="icon-home2"></i> <span>Dashboard</span></a></li>

                                @if (person.Type == "SuperAdmin")
                                {
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "AdminProfile")"><a href="@Url.Action("Index", "AdminProfile")"><i class="icon-users4"></i> <span>Admins</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "ExamNames")"><a href="@Url.Action("Index", "ExamNames")"><i class="icon-users4"></i> <span>Exam Names</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Religions")"><a href="@Url.Action("Index", "Religions")"><i class="icon-users4"></i> <span>Religion</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Genders")"><a href="@Url.Action("Index", "Genders")"><i class="icon-users4"></i> <span>Gender</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "BloodGroups")"><a href="@Url.Action("Index", "BloodGroups")"><i class="icon-users4"></i> <span>Blood Group</span></a></li>


                                }
                                else if (person.Type == "Admin")
                                {
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "AccountProfile")"><a href="@Url.Action("Index", "AccountProfile")"><i class="icon-users4"></i> <span>Accountants</span></a></li>
                                    <li class="@Html.IsActive(actions: "Edit,Details", controllers: "Institutes")"><a href="@Url.Action("Details", "Institutes", new { Id = person.InstituteID })"><i class="icon-users4"></i> <span>Institute</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Classes")"><a href="@Url.Action("Index", "Classes")"><i class="icon-users4"></i> <span>Classes</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "ClassSubjects")"><a href="@Url.Action("Index", "ClassSubjects")"><i class="icon-users4"></i> <span>Subjects</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "ClassExams")"><a href="@Url.Action("Index", "ClassExams")"><i class="icon-users4"></i> <span>Exams</span></a></li>
                                    @*<li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Sections")"><a href="@Url.Action("Index", "Sections")"><i class="icon-users4"></i> <span>Sections</span></a></li>*@
                                }
                                else
                                {
                                    <li>
                                        <a href="#"><i class="icon-air"></i> <span>Basic Setup</span></a>
                                        <ul>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "BloodGroup")"><a href="@Url.Action("Index", "BloodGroup")"><i class="icon-users4"></i> <span>Blood Group</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Genders")"><a href="@Url.Action("Index", "Genders")"><i class="icon-users4"></i> <span>Gender</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Designation")"><a href="@Url.Action("Index", "Designation")"><i class="icon-users4"></i> <span>Designation</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "PaymantNames")"><a href="@Url.Action("Index", "PaymantNames")"><i class="icon-users4"></i> <span>Paymant Names</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "ReferencePerson")"><a href="@Url.Action("Index", "ReferencePerson")"><i class="icon-users4"></i> <span>Reference Person</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Religion")"><a href="@Url.Action("Index", "Religion")"><i class="icon-users4"></i> <span>Religion</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Addresses")"><a href="@Url.Action("Index", "Addresses")"><i class="icon-users4"></i> <span>Address</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "SubjectNames")"><a href="@Url.Action("Index", "SubjectNames")"><i class="icon-users4"></i> <span>Subject Names</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "TeacherClassSubject")"><a href="@Url.Action("Index", "Class")"><i class="icon-users4"></i> <span>Teacher Class Subject</span></a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <a href="#"><i class="icon-air"></i> <span>Profile Setup</span></a>
                                        <ul>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "StudentProfile")"><a href="@Url.Action("Index", "StudentProfile")"><i class="icon-users4"></i> <span>Student Profile</span></a></li>
                                            <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "TeacherProfile")"><a href="@Url.Action("Index", "TeacherProfile")"><i class="icon-users4"></i> <span>Teacher Profile</span></a></li>
                                        </ul>
                                    </li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Admission")"><a href="@Url.Action("Index", "Admission")"><i class="icon-user-check"></i> <span>Admission</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "People")"><a href="@Url.Action("Index", "People")"><i class="icon-users4"></i> <span>Persons</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "StudentAttendance")"><a href="@Url.Action("Index", "StudentAttendance")"><i class="icon-user-check"></i> <span>Attendance</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "Result")"><a href="@Url.Action("Index", "Result")"><i class="icon-user-check"></i> <span>Result</span></a></li>
                                    <li class="@Html.IsActive(actions: "Index,Create,Edit,Delete,Details", controllers: "StudentProfile")"><a href="@Url.Action("Index", "StudentProfile")"><i class="icon-user-check"></i> <span>Student Profile</span></a></li>

                                    <li>
                                        <a href="#"><i class="icon-tree5"></i> <span>Basic Setup</span></a>
                                        <ul>
                                            <li><a href="#"><i class="icon-IE"></i> Second level</a></li>
                                            <li>
                                                <a href="#"><i class="icon-firefox"></i> Second level with child</a>
                                                <ul>
                                                    <li><a href="#"><i class="icon-android"></i> Third level</a></li>
                                                    <li>
                                                        <a href="#"><i class="icon-apple2"></i> Third level with child</a>
                                                        <ul>
                                                            <li><a href="#"><i class="icon-html5"></i> Fourth level</a></li>
                                                            <li><a href="#"><i class="icon-css3"></i> Fourth level</a></li>
                                                        </ul>
                                                    </li>
                                                    <li><a href="#"><i class="icon-windows"></i> Third level</a></li>
                                                </ul>
                                            </li>
                                            <li><a href="#"><i class="icon-chrome"></i> Second level</a></li>
                                        </ul>
                                    </li>
                                }

